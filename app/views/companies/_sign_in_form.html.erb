  <%= f.text_field :email %><br>
  <%= f.password_field :password %><br>

	<%= hidden_field_tag :remember_me, 1 %>
  <%= f.submit 'Sign in', :class=>'btn btn-large btn-primary', :style=>"width:15em" %><br>
