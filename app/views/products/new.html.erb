        <%= form.text_field :link %>

	<h3>Price</h3>
        <%= form.text_field :price %>

	<h3>Description</h3>
        <%= form.text_field :description %>
	<br>
	<br>
	<br>
	<p>
        <%= form.file_field :picture %>
	</p>
