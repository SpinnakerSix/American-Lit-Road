<%= render "single_shop_header" %>
<div id="myoutercontainer" style='position:relative'>
<!--	<div id="myinnercontainer" style='position:absolute; top:50%; margin-top:5%' >-->
<div class="container_shop">
	<br>
	<table style="margin:2em;padding-top:4em;width:100%">
		<tr>
			<td style="width:40%;margin-top:4em;">
				<%= render "product_info" %>
			</td>

			<td style="margin-top:4em;text-align:center">
				<div style="display:none;" id='credit_card_form'>
					<%= render 'credit_card_form' %>
				</div>

				<a href='#' onclick="showCreditCardForm()" class="btn btn-success btn-large" id='want_button' style="">
					<i class="icon-shopping-cart icon-large"></i>
					Get this
				</a>

				<script>
					function showCreditCardForm() {
						$('#credit_card_form').show(500);
						$('#want_button').hide();
					}		
				</script>
			</td>
		</tr>
	</table>
<br>
</div>
</div>
