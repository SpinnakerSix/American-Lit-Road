<!-- Header file -->
<%= yield :head %>

<header>
  <% if company_signed_in? %>
    <nav>
      <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
        <div class="container">
        <a class="brand" href="/" style="padding:0;margin:0" >
        <%= image_tag "logo_small.png" %>
        </a>

        <% if current_company.admin? %>
        <ul class="nav">
        <li>
        <%= link_to "Users", admin_users_path %>
        </li>
        <li>
        <%= link_to "Products", admin_products_path %>
        </li>
        </ul>
        <% end %>
        <ul class="nav pull-right">

        <!--<li class=''><%= link_to "My Brand's Dashboard", current_company %><li>-->
        <li class="<%= @products_list %>"><%= link_to "Products List", company_products_path(current_company) %><li>
        <li class="<%= @new %>"><%= link_to "Add Product", company_product_path(current_company, "new")%></li>
        <li class="<%= @account %>"><%= link_to "Account", account_companies_path %><li>
        <li class=""><%= link_to "Logout", destroy_company_session_path, :method => :delete, :class => 'links' %></li>
        </ul>
        </div>
        </div>
      </div>
    </nav>
  <% end %>
</header>
